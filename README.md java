Class string buffer_Demo
{
 Public static void main (string args[])
  {
   String buffer S1= new string buffer();
   System.out.println(S1.capacity());
   System.out.println(s1.length ());
   
   String buffer S2= new string buffer ("Welcome");
   System.out.println(S2.capacity());
   
   System.out.println(S2.charaAt(4));
    
   S2.set charAt(4,"a");
   System.out.println("S2");
   
   s2.delete charAt(4);
   System.out.println("S2");

   S2.append("Anjana");
